/*顶部导航栏*/
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
} 

/*直播间列表*/

.live-item{
 width:46%;
 height:300rpx;
 float: left;
 margin-left:20rpx;
 margin-top:40rpx;
 position: relative;
} 

.live-anchor-box{
  margin-bottom: 5rpx;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.live-anchor-box image{
  width: 45rpx;
  height: 45rpx;
}

.live-anchor-box text
{
   margin-left: 15px;
}


.live-img{
  width:100%;
  height:220rpx;
} 
.live-image{
  width: 100%;
  height:220rpx;
}
.live-title{
  text-align: center;
  font-size:32rpx;
  font-family: '微软雅黑';
  display:flex;
  height:45rpx;
  margin-top:10rpx;
  flex-direction:column;
  justify-content: center;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  overflow: hidden;
}
/*搜索框*/
.search{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.keyboard-input {  
  margin-top:300rpx; 
  width: 400rpx;
  height: 80rpx;
  word-break: break-all;
  border: 2px solid gainsboro;
  text-align: center;
  border-radius: 5rpx;
}

.submit-btn {
  margin-top: 15rpx;
  margin-right: 8rpx;
  line-height: 60rpx;
  width: 150rpx;
  height: 60rpx;
  background-color: #FFCC00;
  border-radius: 5rpx;
  color: #fff;
  text-align: center;
  font-family: Microsoft Yahei;
}
